{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2018.promise", "es2016", "es2015", "DOM"],
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "es6",
    "declaration": true,
    "module": "commonjs",
    "outDir": "js",
    "rootDir": "ts",

    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules"],
  "include": ["index.ts", "./ts/**/*"]
}
